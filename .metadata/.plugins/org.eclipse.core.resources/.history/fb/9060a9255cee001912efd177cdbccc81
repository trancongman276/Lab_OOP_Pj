package lab2.Object;

public class Pacticle {
	private int x,y;
	static enum Direction {N,NE,E,SE,S,SW,W,NW};
	
	public Pacticle(int x,int y) {
		this.x = x;
		this.y = y;
	}
	
	public void move(int w, int h, Direction D) {
		switch(D) {
			case N: 
				if(!check(w,h,0,-1)) break; else y-=1;break;
			case NE: 
				if(!check(w,h,1,-1)) break; else x+=1; y-=1;break;
			case E: 
				if(!check(w,h,1,0)) break; else x+=1;break;
			case SE: 
				if(!check(w,h,1,1)) break; else x+=1;y+=1;break;
			case S: 
				if(!check(w,h,0,1)) break; else y+=1;break;
			case SW: 
				if(!check(w,h,-1,1)) break; else y+=1;x-=1;break;
			case W: 
				if(!check(w,h,-1,0)) break; else x-=1;break;
			case NW: 
				if(!check(w,h,-1,-1)) break; else y-=1;x-=1;break;
		}
	}
	
	private boolean check(int w, int h, int mX,int mY) {
		if(x==1 && mX==-1) return false;
		if(y==1 && mY==-1) return false;
		if(x==h-1 && mX==1) return false;
		if(y==w-1 && mY==1) return false;
		return true;
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}
	
}
